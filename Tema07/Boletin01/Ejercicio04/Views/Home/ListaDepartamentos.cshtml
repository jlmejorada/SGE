@{
    <!DOCTYPE html>
    <html lang="es">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Lista de Departamentos</title>
        <style>
            ul {
                list-style-type: none;
                padding: 0;
            }

            li {
                margin: 10px 0;
                padding: 10px;
                border: 1px solid #ccc;
                border-radius: 5px;
            }

            .id {
                font-weight: bold;
                margin-right: 10px;
            }
        </style>
    </head>
    <body>
        <h1>Lista de Departamentos</h1>

        <ul>
            @foreach (var departamento in ViewBag.departamentos)
            {
                <li>
                    <span class="id">@departamento.IdDepartamento</span>
                    <span>@departamento.Nombre</span>
                </li>
            }
        </ul>
    </body>
    </html>
}
